<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/fondo_pantallas"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lbl_mensajeBienvenido"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25sp"
        android:paddingTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alto_boton"
        android:text="@string/btn_registro"
        android:id="@+id/btn_registro"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_bg"
        android:onClick="registroOnClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_ingreso"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alto_boton"
        android:text="@string/btn_ingresar"
        android:id="@+id/btn_ingreso"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_bg"
        android:onClick="ingresoOnClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_continuar"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alto_boton"
        android:text="@string/btn_continuarSinRegistro"
        android:id="@+id/btn_continuar"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_solicitarValidacion"
        android:layout_marginTop="5dp"
        android:onClick="continuarSinRegistroOnClick"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alto_boton"
        android:text="@string/btn_solcitarValidacion"
        android:id="@+id/btn_solicitarValidacion"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="9sp"
        android:layout_marginTop="15dp"
        android:onClick="solicitarValidacionOnClick"/>

</RelativeLayout>
